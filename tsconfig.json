{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "baseUrl": "./",
    "outDir": "dist",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "include": [
      "src/**/*",
      "vite.config.ts"
    ],
    "exclude": [
      "node_modules"
    ],
    "jsx": "react",
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true
  }
}